<script>
async function loadProducts() {
  const repo = "chkim-epm/EPM"; // âœ… ë³¸ì¸ ì €ì¥ì†Œë¡œ ë³€ê²½í•˜ì§€ ì•Šì•„ë„ ë¨
  const apiUrl = `https://api.github.com/repos/${repo}/contents/products`;

  try {
    const res = await fetch(apiUrl);
    if (!res.ok) throw new Error("ìƒí’ˆ ë°ì´í„°ë¥¼ ë¶ˆëŸ¬ì˜¬ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.");
    const files = await res.json();

    let html = "";
    for (const file of files) {
      if (!file.name.endsWith(".md")) continue;
      const content = await (await fetch(file.download_url)).text();

      const title = content.match(/title:\s*(.*)/)?.[1]?.trim() || "ìƒí’ˆëª… ì—†ìŒ";
      const price = content.match(/price:\s*(.*)/)?.[1]?.trim() || "ê°€ê²© ë¯¸ìƒ";
      const desc = content.match(/description:\s*(.*)/)?.[1]?.trim() || "";
      const image = content.match(/image:\s*(.*)/)?.[1]?.trim() || "image/default.webp";

      html += `
        <div class="product-card">
          <img src="${image}" alt="${title}">
          <div class="product-info">
            <h2>${title}</h2>
            <p>${desc}</p>
            <div class="product-table">
              <table>
                <tbody>
                  <tr><th>ê°€ê²©</th><td>${price}ì›</td></tr>
                  <tr><th>ì„¤ëª…</th><td>${desc}</td></tr>
                </tbody>
              </table>
            </div>
            <a href="#">ìì„¸íˆ ë³´ê¸°</a>
          </div>
        </div>
      `;
    }

    document.getElementById("productGrid").innerHTML = html || "<p style='text-align:center;'>ë“±ë¡ëœ ìƒí’ˆì´ ì—†ìŠµë‹ˆë‹¤.</p>";
  } catch (error) {
    document.getElementById("productGrid").innerHTML = "<p style='text-align:center; color:red;'>âš ï¸ ìƒí’ˆì„ ë¶ˆëŸ¬ì˜¤ëŠ” ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.</p>";
    console.error(error);
  }
}

loadProducts();
</script>

